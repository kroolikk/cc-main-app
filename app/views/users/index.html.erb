<h1>Użytkownicy</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Imię</th>
    <th>Rola</th>
    <th>Utworzony</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.name %></td>
    <td><%= user.role %></td>
    <td><%= user.created_at.strftime("%Y/%m/%d/ %H:%M:%S") %></td>
    <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
    <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>