<h1>Artykuły</h1>

<table>
  <tr>
    <th>Tytuł</th>
    <th>Opis</th>
    <th>Start</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.start_date %></td>
    <td><%= link_to 'Edytuj', edit_post_path(post) %></td>
    <td><%= link_to 'Usuń', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nowy artykuł', new_post_path %>
